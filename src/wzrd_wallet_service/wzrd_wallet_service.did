type CreateWalletResponse = record  {
    "token": text;
    "phrase": text;
    "btc_address": text;
    "icp_address": text;
    "eth_address": text;
}


service : {
    "Create_Wallet": (record{
      token: text;
    }) -> (CreateWalletResponse);
    
    "Destroy_Wallet": (record {
      token: text;
    }) -> (record {
      token: text;
      result: text;
    });

    "Get_Wallet_Address": (record{
      token: text;
    }) -> (CreateWalletResponse);

    "Get_BTC_Balance": (record {
      token: text;
      address: text; 
    }) -> (record {
      balance: text;
      token: text;
    });

    "Send_BTC": (record {
      token: text;
      destination_address: text;
      amount_in_satoshi: nat64;
    }) -> (record {
      tx_id: text;
      token: text;
    });

    "Get_ICP_Balance": (record{
      token: text;
      address: text;
    }) -> (record {
      balance: text;
      token: text;
    });

    "Send_ICP":(record {
      token: text;
      destination_address: text;
      amount_in_e8s: nat64;
    }) -> (record {
      block_index: text;
      token: text;
    });
}
